{
  "manifest_version": 2,
  "name": "Copilot Chrome Extension",
  "version": "1.0.1",
  "description": "This extension takes Copilot users from a brand site url to the corresponding Copilot content",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "*://*.conde.io/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.allure.com/*",
        "*://*.architecturaldigest.com/*",
        "*://*.bonappetit.com/*",
        "*://*.brides.com/*",
        "*://*.cntrending.com/*",
        "*://*.cntraveler.com/*",
        "*://*.details.com/*",
        "*://*.epicurious.com/*",
        "*://*.glamour.com/*",
        "*://*.golfdigest.com/*",
        "*://*.gq.com/*",
        "*://*.pitchfork.com/*",
        "*://*.self.com/*",
        "*://*.teenvogue.com/*",
        "*://*.newyorker.com/*",
        "*://*.vanityfair.com/*",
        "*://*.vogue.com/*",
        "*://*.vogue.de/*",
        "*://*.wmagazine.com/*",
        "*://*.wired.com/*"
      ],
      "js": [
        "inject.js"
      ]
    }
  ]
}
